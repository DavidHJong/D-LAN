<!DOCTYPE html>
<erl>
   out(A) ->
      {bindings, [{"current_page", atom_to_list(d_lan_common:current_page(A))}]}.
</erl>
<html>
   <head>
      <meta charset="utf-8" />
      <erl>
         out(A) -> {ehtml, {title, [], d_lan_lang:tr(global, title, A)}}.
      </erl>
      <link rel="shortcut icon" href="favicon.ico" />
      <link rel="stylesheet" href="style.css" />
      <link rel="stylesheet" href="colorbox/colorbox.css" />
      <script src="js/jquery-1.7.2.min.js"></script>
      <script src="colorbox/jquery.colorbox-min.js"></script>
      <script src="js/snow.js"></script>
      <script src="js/d_lan.js"></script>
   </head>
   <body>

      <canvas id="canvas-menu"></canvas>

      <div id="header">
         <ul id="external-links">
            <li><a href="http://dev.d-lan.net/projects/pmp/wiki" target="_blank">wiki</a></li>
            <li><a href="http://dev.d-lan.net/projects/pmp/boards" target="_blank">forums</a></li>
            <li><a href="https://github.com/Ummon/D-LAN" target="_blank">github</a></li>
            <li><a href="donate.html"><erl>
                  out(A) -> {html, d_lan_lang:tr(header, support_us, A)}.
            </erl></a></li>
         </ul>
         <ul id="langs">
            <erl>
               out(A) ->
                  P = yaws_api:binding("current_page"),
                  Current_lang = d_lan_lang:current_lang(A),
                  {ehtml,
                     lists:map(fun(L) -> {li, [], [
                        {a,
                           [
                              {href, P ++ ".html&amp;lang=" ++ atom_to_list(L)}
                           ] ++ if L =:= Current_lang -> [{class, "current-lang"}]; true -> [] end, d_lan_lang:plain_lang(L)
                        }
                     ]} end, d_lan_lang:langs())
                  }.
            </erl>
         </ul>
         <div class="spacer"></div>
      </div>

      <div id="menu">
         <ul>
            <erl>
               out(A) -> d_lan_common:menu(A).
            </erl>
         </ul>
         <a id="logo" href="/"><img src="img/logo.png" alt="logo" /></a>
      </div>

      <div id="content-bg">

         <div id="content" class="%%current_page%%">
            <erl>
               out(A) ->
                  {yssi, yaws_api:binding("current_page") ++ ".yaws"}.
            </erl>
         </div>
      </div>

      <div id="footer">
         <span class="copyright">
         <erl>
            out(A) ->
               {Year, _, _} = date(),
               {html, "copyright 2010-" ++ integer_to_list(Year)}.
         </erl>
         <a href="http://www.gburri.org">Greg Burri</a></span>
      </div>
   </body>
</html>
